PYTHON=/usr/bin/python2.6 -d
TMP=$(CURDIR)/debian/tmp/

export DH_VERBOSE=1

%:
	dh $@

override_dh_strip:
	@echo "NOT stripping binaries"

override_dh_auto_configure:
	@$(PYTHON) build.py configure --noconfig -d --prefix=/usr --install-destdir=$(TMP)

override_dh_auto_build:
	@$(PYTHON) build.py --noconfig -d build

override_dh_auto_clean:
	@$(PYTHON) build.py --noconfig -d distclean

override_dh_auto_install:
	@$(PYTHON) build.py --noconfig -d install

